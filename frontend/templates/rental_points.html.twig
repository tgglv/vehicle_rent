{% extends "base.html.twig" %}

{% block title %}Пункты проката{% endblock %}
{% block head %}
    {{ parent() }}

    <script src="js/common.js" type="text/javascript"></script>
    <script>

        window.onload = function () {
            setCountryId(getCountryIdFromSession());
            setPointId(getPointIdFromSession());
        }

    </script>
{% endblock %}

{% block content %}

    <form>
        <button type="button" class="btn btn-success">Добавить пункт проката</button>
        <div class="form-group">
            <label for="country">Страна</label>
